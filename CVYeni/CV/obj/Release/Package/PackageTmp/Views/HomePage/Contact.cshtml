@model CV.Models.Entity.Tables
@{
    Layout = null;
}
<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
            @foreach (var item2 in Model.ResultContact)
            {
                <p>@item2.Title</p>
            }
        </div>

        <div class="row" data-aos="fade-in">

            <div class="col-lg-5 d-flex align-items-stretch">
                <div class="info">
                    @foreach (var item in Model.ResultContact)
                    {
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>@item.Location</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>@item.Email</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Call:</h4>
                            <p>@item.Call</p>
                        </div>
                    }

                    <iframe width="450" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" id="gmap_canvas" src="https://maps.google.com/maps?width=520&amp;height=400&amp;hl=en&amp;q=%20%C4%B0stanbul%20/%20Avc%C4%B1lar+(Avc%C4%B1lar)&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe> <a href='https://www.symptoma.com.tr/tr/info/covid-19#info'>Koronavirüsler</a>
                    <script type='text/javascript' src='https://embedmaps.com/google-maps-authorization/script.js?id=d9efcd1c4488b2fa338d166235a32f40e18930c3'></script>
                </div>
            </div>
            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
                <form method="post" class="form-control">
                    <div>
                        <div style="margin-top:15px">
                            <label for="name">Your Name</label>
                            <input type="text" name="Name" class="form-control" required>
                        </div>
                        <div style="margin-top:15px">
                            <label for="name">Your Email</label>
                            <input type="email" class="form-control" name="Email" required>
                        </div>
                    </div>
                    <div style="margin-top:15px">
                        <label for="name">Subject</label>
                        <input type="text" class="form-control" name="Subject" required>
                    </div>
                    <div style="margin-top:15px">
                        <label for="name">Message</label>
                        <textarea class="form-control" name="Message" rows="10" required></textarea>
                    </div>
                    <div style="margin-top:15px" class="text-center"><button type="submit" class="btn btn-primary">Send Message</button></div>
                </form>
            </div>
        </div>
    </div>
</section>

