@model CV.Models.Entity.Tables
@{
    Layout = null;
}

<section id="skills" class="skills section-bg">
    <div class="container">

        @foreach (var item in Model.ResultSkills)
        {
            <div class="section-title">
                <h2>Skills</h2>
                <p>@item.Description</p>
            </div>
        }

        <div class="row skills-content">

            <div class="col-lg-6" data-aos="fade-up">

                @foreach (var item2 in Model.ResultSkills)
                {
                    <div class="progress">
                        <span class="skill">@item2.Title1<i class="val">@item2.Num1%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item2.Num1" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

                @foreach (var item3 in Model.ResultSkills)
                {
                    <div class="progress">
                        <span class="skill">@item3.Title2<i class="val">@item3.Num2%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item3.Num2" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

                @foreach (var item4 in Model.ResultSkills)
                {
                    <div class="progress">
                        <span class="skill">@item4.Title3<i class="val">@item4.Num3%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item4.Num3" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

            </div>

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">

                @foreach (var item5 in Model.ResultSkills)
                {
                    <div class="progress">
                        <span class="skill">@item5.Title4<i class="val">@item5.Num4%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item5.Num4" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

                @foreach (var item6 in Model.ResultSkills)
                {
                    <div class="progress">
                        <span class="skill">@item6.Title5<i class="val">@item6.Num5%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item6.Num5" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

                @foreach (var item7 in Model.ResultSkills)
                {
                    <div class="progress">
                        <span class="skill">@item7.Title6<i class="val">@item7.Num6%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item7.Num6" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </div>
</section>