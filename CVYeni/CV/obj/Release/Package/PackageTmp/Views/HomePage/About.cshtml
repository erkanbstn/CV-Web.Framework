@model CV.Models.Entity.Tables
@{
    Layout = null;
}

<section id="about" class="about">
    <div class="container">

        @foreach (var item in Model.ResultAbout)
        {
            <div class="section-title">
                <h2>About</h2>
                <p>@item.DescTitle</p>
            </div>
        }

        <div class="row">
            @foreach (var item2 in Model.ResultAbout)
            {
                <div class="col-lg-4" data-aos="fade-right">
                    <img src="~/Portf/img/@item2.Image" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                    <h3>UI/Programmer Designer &amp; SoftWare Developer.</h3>
                    <p class="fst-italic">
                        @item2.Description
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@item2.Birth</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item2.WebSite</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@item2.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@item2.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@item2.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@item2.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>PhEmailone:</strong> <span>@item2.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item2.Freelance</span></li>
                            </ul>
                        </div>
                    </div>
                    <p>
                        @item2.LastDescription
                    </p>
                </div>
            }
        </div>

    </div>
</section>
